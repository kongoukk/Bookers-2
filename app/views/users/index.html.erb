<main>
    <p>  </p>
  <div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-3">
        <h2>User info</h2>
        <table class="table">
         <tbody>
          <% if @users.first.image.attached? %>
          <%= image_tag url_for(@users.first.image.variant(resize: "100x100")), size: "100x100" %>
          <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
          <% end %>

          <tr>
	         <th>name</th>
	         <th><%= @user.name %></th>
          </tr>
          <tr>
	         <th>introduction</th>
	         <th><%= @user.introduction %></th>
          </tr>
         </tbody>
         </table>

         <div class="row">
          <div class="btn btn-outline-secondary btn-block fas">
           <%= link_to edit_user_path(current_user.id),class: "fa-solid fa-user-gear"  do %>
           <% end %>
          </div>
         </div>

         <h2>New book</h2>
         <%= form_with model: Book.new do |f| %>
         <h6>Title</h6>
         <%= f.text_field :title %>
         <h6>Opinion</h6>
         <%= f.text_area :body %>
         <div class="form-group">
         <%= f.submit 'Create Book', class: "btn btn-success" %>
         </div>
         <% end %>
         </div>

       <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
      <table class="table table-hover table-inverse">
       <thead>
         <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </tr>
       </thead>

       <tbody>
         <% @users.each do |user| %>
            <tr>
            <td>
               <%= image_tag user.get_no_image(100, 100) %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
            <td colspan="3"></td>
           </tr>
           <% end %>
        </tbody>

      </table>
      </div>
   </div>
 </div>
</main>



